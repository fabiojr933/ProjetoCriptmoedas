@model IList<ProjetoCriptmoedas.Models.Moedas>

@{
    ViewData["Title"] = "Defaut";
}

<h4>Em qual Moeda vc investe</h4>
<hr />

<form asp-controller="Moedas" asp-action="EscolhasMoedas" method="post" class="form-group">

    @{
        for (int i = 0; i < Model.Count(); i++)
        {
            <input asp-for="@Model[i].CheckBoxMarcado" type="checkbox" />
            <label asp-for="@Model[i].MoedasId">@Model[i].Nome</label>
            <input asp-for="@Model[i].MoedasId" type="hidden" />
            <input asp-for="@Model[i].Nome" type="hidden" />
            <br/>
        }
        <input type="submit" value="Enviar" class="btn btn-default"/>
    }

</form>

